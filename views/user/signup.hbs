<section>
    <div class="container">
        <div class="row p-5">
            <div class="col-md-6 mx-auto">
                <h2 class="text-center">Signup</h2>
                <form action="/signup" method="POST" enctype="multipart/form-data">

                    <div class="p-2"><label>Name</label>
                        <input type="text" name="Name" class="form-control">
                    </div>

                    <div class="p-2"><label>Email</label>
                        <input type="text" name="Email" class="form-control">
                    </div>

                    <div class="p-2"><label>Password</label>
                        <input type="text" name="Password" class="form-control">
                    </div>

                    <a href="/login" style="text-decoration: none;" class="m-2 ">Already have account</a>

                    <button type="submit" class="btn btn-primary m-2" style="float: right;">Submit</button>

                </form>
            </div>
        </div>
    </div>
</section>